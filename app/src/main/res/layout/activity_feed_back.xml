<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.diviniti.toarunolibris.FeedBack.FeedBackActivity">

    <include
        android:id="@id/toolbar"
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding">

        <android.support.v7.widget.CardView
            android:id="@+id/feedback_content_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:cardElevation="2dp">

            <EditText
                android:id="@+id/feedback_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@null"
                android:gravity="top"
                android:hint="发现Bug了 还是 有什么建议？"
                android:maxHeight="400dp"
                android:minHeight="200dp"
                android:padding="@dimen/layout_padding"
                android:textColor="@color/mainPrimaryTextColor"
                android:textColorHint="@color/mainSecondaryTextColor" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/feedback_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            app:cardBackgroundColor="@color/mainPrimaryColor"
            app:cardElevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/feedback_btn"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
