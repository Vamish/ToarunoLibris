<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.diviniti.toarunolibris">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SearchResultActivity"
            android:label="@string/title_activity_book_result"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".Welcome.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookInfoActivity"
            android:label="@string/title_activity_book_info"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".BooksList.BooksListActivity"
            android:label="@string/title_activity_books_list"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".Login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".FeedBack.FeedBackActivity"
            android:label="@string/title_activity_feed_back"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".test.TestActivity"
            android:label="@string/title_activity_test"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".Settings.AboutLibrisActivity"
            android:label="@string/title_activity_about_libris"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".HotSearch.HotSearchActivity"
            android:label="@string/title_activity_hot_search"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />
        <activity
            android:name=".MyStatus.BorrowingStatusActivity"
            android:label="@string/title_activity_borrwing_status"
            android:screenOrientation="portrait"
            android:theme="@style/SwipeBack" />

        <receiver
            android:name=".Wechat.AppRegister"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>
